<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/backgroundawal">

    <!--jumbotronnya-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/logo1"
        android:layout_width="135sp"
        android:layout_height="145sp"
        android:src="@drawable/logo1" />
    <LinearLayout
        android:id="@+id/linearSatu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile"
        android:textAlignment="center"
        android:textSize="35sp"
        android:layout_gravity="center"
        android:paddingLeft="5sp"
        android:textColor="#000"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SMKN 1 SAYUNG      KEPALA SEKOLAH"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textColor="#000"
        android:textStyle="bold"/>
     </LinearLayout>
    </LinearLayout>
<!--  Tombol / Button  -->
    <LinearLayout
        android:id="@+id/linearDua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_marginTop="40sp"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:layout_marginTop="20sp"
        android:text="@string/paksantoso"/>
    <Button
        android:id="@+id/jurusansmk_button"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:text="JURUSAN SMKN 1 SAYUNG"/>

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/vokasi"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_marginTop="230dp"
        android:layout_marginRight="20sp"
        app:srcCompat="@drawable/vokasi"/>
    <ImageView
        android:id="@+id/tutwuri"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginTop="230dp"
        app:srcCompat="@drawable/tutwuri" />
    <ImageView
        android:id="@+id/smk"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_marginStart="10sp"
        android:layout_marginTop="230dp"
        app:srcCompat="@drawable/smk" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:background="#E80099FF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â© 2022 Heydaristo Zhahir Razaq"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="19dp"/>
    </LinearLayout>
<!--  Selesai  -->
</LinearLayout>